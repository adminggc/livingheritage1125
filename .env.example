# Environment Configuration Example
# Copy this file to .env and update with your settings

# Server
NODE_ENV=production
PORT=3000

# Database Mode
USE_DATABASE=true    # Set to 'false' for JSON file mode (local development)
USE_CACHE=false      # Redis caching (optional)

# Admin API Key - REQUIRED for /api/admin/* endpoints
# Change this to a strong random string in production
ADMIN_API_KEY=your-strong-random-key-here

# PostgreSQL Database Connection
DATABASE_URL=postgresql://postgres:password@ballast.proxy.rlwy.net:40428/railway
DB_HOST=ballast.proxy.rlwy.net
DB_PORT=40428
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your_password_here

# For local development with JSON files, use:
# USE_DATABASE=false
# All other database vars can be left as defaults
